<% body_setting = Refinery::Setting.friendly.find(body.to_s) %>
<% subj_setting = Refinery::Setting.friendly.find(subject.to_s) %>

<%= form_tag(refinery.multi_update_admin_settings_path, method: "post", :html => {:class => "ajax-form"}) do %>
  <% locale_scope = "refinery.admin.settings.form.#{body_setting.name}" %>
  <p data-locale-scope="<%= "#{locale_scope}.explanation" %>">
    <%= t("#{locale_scope}.explanation") %>
  </p>
  <p data-locale-scope="<%= "#{locale_scope}.below_edit_email_sent" %>">
    <%= t("#{locale_scope}.below_edit_email_sent") %>
  </p>

  <div id='<%= body_setting.name %>'>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label" data-locale-scope="<%= "#{locale_scope}.to" %>">
        <%= t("#{locale_scope}.to") %>
      </label>
      <div class="col-sm-10">
        <p class="form-control-static" data-locale-scope="<%= "#{locale_scope}.the_person" %>">
          <%= t("#{locale_scope}.the_person") %>
        </p>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label" data-locale-scope="<%= "#{locale_scope}.from" %>">
        <%= t("#{locale_scope}.from") %>
      </label>
      <div class="col-sm-10">
        <p class="form-control-static"><%= "#{Refinery::Core.site_name} &lt;no-reply@#{request.domain}&gt;".html_safe %></p>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label" data-locale-scope="<%= "#{locale_scope}.subject" %>">
        <%= t("#{locale_scope}.subject") %>
      </label>
      <div class="col-sm-10">
        <%= hidden_field_tag 'settings[0][name]',  subj_setting.name %>
        <%= text_field_tag   'settings[0][value]', subj_setting.value, {class: 'form-control'} %>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-sm-2 form-control-label" data-locale-scope="<%= "#{locale_scope}.message" %>">
        <%= t("#{locale_scope}.message") %>
      </label>
      <div class="col-sm-10">
        <%= hidden_field_tag 'settings[1][name]',  body_setting.name %>
        <%= text_area_tag    'settings[1][value]', body_setting.value, {rows: "7", class: 'form-control mb-2'} %>
        <small class="text-muted" data-locale-scope="<%= "#{locale_scope}.note" %>">
          <%= t("#{locale_scope}.note") %>
        </small>
      </div>
    </div>
  </div>

  <div class="form-actions flex align-items-center mb-5">
    <div class="form-actions-left">
      <%= button_tag 'Save', :type => :submit, :class => "btn btn-primary btn-lg mb-2" %>
    </div>
  </div>
<% end %>
